<h1>All My Items</h1>

<% if merchant_admin? %>
  <%= link_to 'Add New Item', merchant_items_new_path %>
<% end %>

<% @items.each do |item| %>
  <section id= "item-<%= item.id %>">
    <%= item.name %>
    <% if item.active? %>
      <%= link_to 'Deactivate Item', "/merchant/items/#{item.id}/deactivate", method: :patch %>
    <% end %>
  </section>
<% end %>
